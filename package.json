{
  "name": "package_tracker",
  "version": "1.0.0",
  "description": "A simple way demonstration of package tracking",
  "main": "dist/main.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "node dist",
    "start:dev": "nodemon -e ts,json --exec ts-node src | bunyan -o short",
    "start:compact": "nodemon -e ts,json --exec ts-node src",
    "clean": "rimraf dist",
    "build": "npm-run-all lint format clean && tsc -p ./tsconfig.json",
    "test": "jest --runInBand --detectOpenHandles --passWithNoTests --forceExit",
    "test:coverage": "yarn test --coverage",
    "lint": "npx xo",
    "lint:fix": "npx xo --fix --prettier",
    "format": "npx prettier --write src",
    "format:check": "npx prettier --check src",
    "prepare": "husky"
  },
  "dependencies": {
    "bunyan": "^1.8.15",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "express": "^4.19.2",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@types/bunyan": "^1.8.11",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.21.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "xo": "^0.58.0"
  }
}
